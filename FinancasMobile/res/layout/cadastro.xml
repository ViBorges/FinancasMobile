<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/emailText2"
        android:hint="@string/user"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_toRightOf="@+id/linearLayout1"
        android:background="@drawable/form_cadeado"
        android:ems="10"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/senhaText2"
        android:hint="@string/senha"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toRightOf="@+id/linearLayout2"
        android:background="@drawable/form_cadeado"
        android:ems="10"
        android:inputType="textPassword" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="22dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/senhaIcon"
            android:contentDescription="@string/email"
            android:layout_width="66dp"
            android:layout_height="58dp"
            android:src="@drawable/cadeado" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="66dp"
        android:layout_height="58dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/email"
        android:src="@drawable/cadeado" />

    <EditText
        android:id="@+id/confirmaSenhaText"
        android:hint="@string/confirma_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView01"
        android:layout_alignRight="@+id/senhaText2"
        android:layout_alignTop="@+id/ImageView01"
        android:layout_toRightOf="@+id/ImageView01"
        android:background="@drawable/form_cadeado"
        android:ems="10"
        android:inputType="textPassword" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/linearLayout3"
        android:layout_marginLeft="23dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="66dp"
            android:layout_height="58dp"
            android:contentDescription="@string/email"
            android:src="@drawable/carta_email" />
    </LinearLayout>

    <Button
        android:id="@+id/cadastroButton"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageView01"
        android:layout_alignRight="@+id/confirmaSenhaText"
        android:layout_below="@+id/ImageView01"
        android:layout_marginTop="52dp"
        android:background="@drawable/login_button"
        android:text="@string/cadastrar" />

</RelativeLayout>